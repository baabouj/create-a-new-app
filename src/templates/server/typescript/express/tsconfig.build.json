{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "lib": ["es6"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
