{
  "name": "create-nodejs-app",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "./dist/index.js",
  "bin": "./dist/bin.js",
  "scripts": {
    "dev": "tsup --format esm --watch --clean --onSuccess \"node dist/bin.js\"",
    "build": "tsup --format esm --clean --sourcemap --minify --metafile",
    "format": "prettier --write --plugin-search-dir=. \"**/*.ts\"",
    "format:check": "prettier --check --plugin-search-dir=. \"**/*.ts\"",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "check": " npm run format:check && npm run lint"
  },
  "keywords": [],
  "author": "Omar Baabouj <baabouj.dev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@types/figlet": "^1.5.5",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2.7.2",
    "@types/prompts": "^2.4.2",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "figlet": "^1.5.2",
    "gradient-string": "^2.0.2",
    "nanospinner": "^1.1.0",
    "prettier": "^2.8.1",
    "prompts": "^2.4.2"
  }
}
